    protected override async Task OnInitializedAsync()
    {
        await Task.Run(() => getData(-1));
    }
    public async Task<List<API_V_DOCENTETE>>  getData(int index)
    {
        return await Task.FromResult(db.API_V_DOCENTETE.Where(a => a.DO_Type == index).ToList());
    }


    private async Task LoadDataAsync(int index)
    {
        _loading = true;
        StateHasChanged();
        items = await getData(index);
        _loading = false;
        StateHasChanged();
    }


    protected async Task RowClicked(API_V_DOCENTETE args)
    {
        rows.Add(args);
